{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",        // Change this to CommonJS
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,     // Crucial for importing Express
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}