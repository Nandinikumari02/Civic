// ===============================
// Prisma Generator & Datasource
// ===============================
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===============================
// ENUMS
// ===============================
enum Role {
  CITIZEN
  DEPARTMENT_ADMIN
  STAFF
  SUPER_ADMIN
}

enum IssueStatus {
  OPEN
  SUBMITTED
  IN_PROGRESS
  RESOLVED
  REJECTED
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

// ===============================
// USER MODEL
// ===============================
model User {
  id           String @id @default(uuid())
  fullname     String
  email        String @unique
  phoneNumber  String @unique
  passwordHash String
  role         Role

  citizen         Citizen?
  staff           Staff?
  departmentAdmin DepartmentAdmin?

  rewards       Reward[]
  notifications Notification[]
  timelines     IssueTimeline[]

  createdAt DateTime @default(now())
}

model Citizen {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  issues Issue[]
}

// ===============================
// DEPARTMENT MODEL
// ===============================

model Department {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?

  staff      Staff[]
  admins     DepartmentAdmin[]
  categories Category[]
  issues     Issue[]
  tasks      Task[]
}

model DepartmentAdmin {
  id           String @id @default(uuid())
  userId       String @unique
  departmentId String

  user       User       @relation(fields: [userId], references: [id])
  department Department @relation(fields: [departmentId], references: [id])
}

model Staff {
  id           String @id @default(uuid())
  userId       String @unique
  departmentId String

  user       User       @relation(fields: [userId], references: [id])
  department Department @relation(fields: [departmentId], references: [id])
  issues     Issue[]
  tasks      Task[]
}

// ===============================
// CATEGORY MODEL
// ===============================
model Category {
  id           String @id @default(uuid())
  name         String
  departmentId String

  department Department @relation(fields: [departmentId], references: [id])
  issues     Issue[]

  @@unique([name, departmentId])
}

// ===============================
// ISSUE MODEL
// ===============================
model Issue {
  id          String      @id @default(uuid())
  title       String
  description String
  status      IssueStatus @default(OPEN)
  images      String?
  latitude    Float
  longitude   Float
  address     String?

  // Citizen (who raised)
  citizenId String
  citizen   Citizen @relation(fields: [citizenId], references: [id])

  // Department & Category
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])

  staffId String? 
  staff   Staff?  @relation(fields: [staffId], references: [id])

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  task     Task?
  timeline IssueTimeline[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ===============================
// ISSUE TIMELINE
// ===============================
model IssueTimeline {
  id      String @id @default(uuid())
  issueId String
  issue   Issue  @relation(fields: [issueId], references: [id])

  status    IssueStatus
  comment   String?
  userId    String
  changedBy User        @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

// ===============================
// TASK MODEL
// ===============================
model Task {
  id          String     @id @default(uuid())
  title       String
  description String
  status      TaskStatus @default(PENDING)

  staffId      String
  departmentId String

  issueId String? @unique

  staff      Staff      @relation(fields: [staffId], references: [id])
  department Department @relation(fields: [departmentId], references: [id])
  issue      Issue?     @relation(fields: [issueId], references: [id])

  createdAt DateTime @default(now())
}

// ===============================
// REWARD MODEL
// ===============================
model Reward {
  id        String  @id @default(uuid())
  points    Int     @default(0)
  badgeName String?

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

model Notification {
  id      String  @id @default(uuid())
  message String
  isRead  Boolean @default(false)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}
