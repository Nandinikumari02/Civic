generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String           @id @default(uuid())
  fullname        String
  email           String           @unique
  phoneNumber     String           @unique
  passwordHash    String
  role            Role
  createdAt       DateTime         @default(now())
  citizen         Citizen?
  departmentAdmin DepartmentAdmin?
  timelines       IssueTimeline[]
  notifications   Notification[]
  rewards         Reward[]
  staff           Staff?
}

model Citizen {
  id     String  @id @default(uuid())
  userId String  @unique
  user   User    @relation(fields: [userId], references: [id])
  issues Issue[]
}

model Department {
  id             String            @id @default(uuid())
  name           String            @unique
  description    String?
  supportedRoles String[]          @default([]) 
  categories     Category[]
  admins         DepartmentAdmin[]
  createdAt       DateTime          @default(now())
  issues         Issue[]
  staff          Staff[]
  tasks          Task[]
}
model DepartmentAdmin {
  id           String     @id @default(uuid())
  userId       String     @unique
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])
  user         User       @relation(fields: [userId], references: [id])
}

model Staff {
  id           String     @id @default(uuid())
  userId       String     @unique
  departmentId String
  designation  String     @default("Field Staff") 
  issues       Issue[]
  department   Department @relation(fields: [departmentId], references: [id])
  user         User       @relation(fields: [userId], references: [id])
  tasks        Task[]
}

model Category {
  id           String     @id @default(uuid())
  name         String
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])
  issues       Issue[]

  @@unique([name, departmentId])
}

model Issue {
  id           String          @id @default(uuid())
  title        String
  description  String
  status       IssueStatus     @default(OPEN)
  latitude     Float
  longitude    Float
  address      String?
  citizenId    String
  departmentId String
  categoryId   String
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  images       String?
  staffId      String?
  category     Category        @relation(fields: [categoryId], references: [id])
  citizen      Citizen         @relation(fields: [citizenId], references: [id])
  department   Department      @relation(fields: [departmentId], references: [id])
  staff        Staff?          @relation(fields: [staffId], references: [id])
  timeline     IssueTimeline[]
  task         Task?
}

model IssueTimeline {
  id        String      @id @default(uuid())
  issueId   String
  status    IssueStatus
  comment   String?
  createdAt DateTime    @default(now())
  userId    String
  issue     Issue       @relation(fields: [issueId], references: [id])
  changedBy User        @relation(fields: [userId], references: [id])
}

model Task {
  id           String     @id @default(uuid())
  title        String
  description  String
  status       TaskStatus @default(PENDING)
  staffId      String
  departmentId String
  issueId      String?    @unique
  createdAt    DateTime   @default(now())
  department   Department @relation(fields: [departmentId], references: [id])
  issue        Issue?     @relation(fields: [issueId], references: [id])
  staff        Staff      @relation(fields: [staffId], references: [id])
}

model Reward {
  id        String   @id @default(uuid())
  points    Int      @default(0)
  badgeName String?
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        String   @id @default(uuid())
  message   String
  isRead    Boolean  @default(false)
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  CITIZEN
  DEPARTMENT_ADMIN
  STAFF
  SUPER_ADMIN
}

enum IssueStatus {
  OPEN
  SUBMITTED
  IN_PROGRESS
  RESOLVED
  REJECTED
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}
